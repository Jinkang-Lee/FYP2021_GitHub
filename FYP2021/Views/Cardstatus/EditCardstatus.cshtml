@model Student

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Concession Card - Admin</title>

    <!-- style sheets references -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!--INSERT CSS FILE HERE-->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

</head>

<body>

    <script language="javascript">
        $(document).ready(function () {
            $('StudentCardsTable')
                .datetimepicker({
                    format: 'YYYY-MM-DD',
                });
        });
    </script>

    <!--RP Logo Area-->
    <section id="banner" class="rp-logo">
        <img src="~/images/RP_Logo.png" width="200" height="80" />
    </section>

    <form asp-controller="Cardstatus"
          asp-action="EditCardstatus"
          method="post">

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6 ">
                <h2>Edit Card Status</h2>
            </div>
        </div>

        <input asp-for="StudEmail" hidden />

        <div class="form-group row">
            <label class="control-label col-sm-2" for="Title">New Card Status :</label>
            <div asp-for="Title" class="col-sm-5">
                <input class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="CardStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@Html.Raw(ViewData["Message"])</text>
                    </div>
                </div>
            </div>
        }

    </form>



</body>
</html>


