<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Concession Card - Admin</title>

    <!-- style sheets references -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!--INSERT CSS FILE HERE-->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

</head>


<body>
    <!--RP Logo Area-->
    <section id="banner" class="rp-logo">
        <img src="~/images/RP_Logo.png" width="200" height="80" />
    </section>


    <section id="banner" class="button-area">
        <div class="container">
            <div class="row">
                <form method="get" action="/Report/ChooseReport">
                    <div class="col-md-6" id="first-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Generate Report</button>
                    </div>
                </form>


                <form method="get" action="/Announcement/Options">
                    <div class="col-md-6" id="first-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Announcement</button>
                    </div>
                </form>

            </div>


            <div class="row">
                <form method="get" action="/Cardstatus/UpdateOptions">
                    <div class="col-md-6" id="second-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Update Card Status</button>
                    </div>
                </form>

                <form method="get" action="/Controller/Action">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="col-md-6" id="second-row-btn">
                            <button class="btn btn-primary btn-toolbar btn-lg">Edit Admin User</button>
                        </div>
                    }
                </form>
            </div>


            <div class="row">
                <form method="get" action="/Admin/EditStudent">
                    <div class="col-md-6" id="third-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Edit Student User</button>
                    </div>
                </form>

                <form method="get" action="/Admin/QueryCardHistory">
                    <div class="col-md-6" id="third-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Query Card History</button>
                    </div>
                </form>
            </div>

            <div class="row">
                <form method="get" action="/Cardstatus/EditAutoDelete">
                    <div class="col-md-6" id="forth-row-btn">
                        <button class="btn btn-primary btn-toolbar btn-lg">Edit Duration of Auto Delete</button>
                    </div>
                </form>

            </div>
        </div>
    </section>
</body>
</html>