@model Student




<!DOCTYPE html>
<html>
   <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Student Concession Card - Admin</title>

        <!-- style sheets references -->
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
        <!--INSERT CSS FILE HERE-->
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

        <!-- script files references -->
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/jquery.validate.min.js"></script>
        <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    </head>

   <body>
       <!--RP Logo Area-->
       <section id="banner" class="rp-logo">
           <img src="~/images/RP_Logo.png" width="200" height="80" />
       </section>



       <div class="container">
           <div class="row">
               <form method="post" action="/Admin/ListEditStudentPost">
                   <div class="form-group row row">
                       <label class="control-label col-2" asp-for="Id">Id : </label>
                       <div class="col-5">
                           <input asp-for="Id" class="form-control" readonly="readonly" />
                       </div>
                   </div>


                   <div class="form-group row">
                       <label class="control-label col-sm-2" asp-for="StudEmail">Student Email: </label>
                       <div class="col-sm-8">
                           <input asp-for="StudEmail" class="form-control" readonly="readonly"/>
                       </div>
                       <span asp-validation-for="StudEmail" class="text-danger"></span>
                   </div>

                   <div class="form-group row">
                       <label class="control-label col-sm-2" asp-for="StudName">Student Name: </label>
                       <div class="col-sm-8">
                           <input asp-for="StudName" class="form-control" />
                       </div>
                       <span asp-validation-for="StudName" class="text-danger"></span>
                   </div>

                   <div class="form-group row">
                       <label class="control-label col-sm-2" asp-for="StudPhNum">Phone Number: </label>
                       <div class="col-sm-8">
                           <input  asp-for="StudPhNum" class="form-control" />
                       </div>
                   </div>

                   <div class="form-group row">
                       <label class="control-label col-sm-2" asp-for="CardStatus">Card Status: </label>
                       <div class="col-sm-5">
                           <select class="form-control col-8" asp-for="CardStatus">
                               <option value="" selected="selected">-- SELECT --</option>
                               <option value="Pending">Pending for Transitlink</option>
                               <option value="Application">Ready for Application</option>
                               <option value="Ready">Card Ready</option>
                               <option value="Dispatched">Card Dispatched</option>
                           </select>
                       </div>
                   </div>

                   <div class="form-group">
                       <input type="submit" style="margin-left: 200px;" class="btn btn-lg btn-primary" value="Update Student" />
                   </div>

                   @if (ViewData["Message"] != null)
                   {
                       <div class="form-group row">
                           <div class="offset-sm-2 col-sm-5">
                               <div class="alert alert-@ViewData["MsgType"]">
                                   @ViewData["Message"]
                               </div>
                           </div>
                       </div>
                   }
               </form>
           </div>

           



       </div>

   </body>
</html>


