@model Announcement

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Announcement</title>

    <!-- style sheets references -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!--INSERT CSS FILE HERE-->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

</head>

<body>
    <!--RP Logo Area-->
    <section id="banner" class="rp-logo">
        <img src="~/images/RP_Logo.png" width="200" height="80" />
    </section>

    <script language="javascript">

        $(document).ready(function () {
            $('#JSPerformDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm',
                    sideBySide: true
                });
        });
    </script>


    <div class="container">
        <div class="row">
            <form asp-controller="Announcement"
                  asp-action="Create"
                  method="post">

                <div class="form-group row">
                    <label class="control-label col-sm-2" asp-for="ViewAnnouncement">Create New Announcement: </label>
                    <div class="col-sm-12">
                        <input asp-for="ViewAnnouncement" class="form-control" />
                    </div>
                    <div>
                        <span asp-validation-for="ViewAnnouncement" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="control-label col-sm-2" asp-for="Announcement_Date">New Announcement Date: </label>
                    <div class="col-sm-12">
                        <div class="input-group date" id="JSPerformDT"
                             data-target-input="nearest">
                            <input type="text" class="form-control"
                                   asp-for="Announcement_Date" asp-format="{0:yyyy-MM-dd}" />
                            <div class="input-group-append"
                                 data-target="#JSPerformDT" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <span asp-validation-for="ViewAnnouncement" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" style="margin-left: 300px;" class="btn btn-lg btn-primary" value="Create New Announcement" />
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-5">
                            <div class="alert alert-@ViewData["MsgType"]">
                                @ViewData["Message"]
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>
